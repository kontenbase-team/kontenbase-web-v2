{
  "name": "kontenbase-web-v2",
  "description": "Kontenbase landing or marketing website v2 based on Rewinds",
  "version": "2.0.0",
  "license": "MIT",
  "sideEffects": false,
  "private": true,
  "scripts": {
    "start": "doppler run -- npm run dev",
    "d": "npm-run-all -p build:css dev:remix",
    "dev": "npm-run-all -p dev:*",
    "dev:css": "tailwindcss -w -i ./styles/global.css -o app/styles/out.css",
    "dev:remix": "remix dev",
    "build": "npm-run-all -s build:css build:remix",
    "build:css": "tailwindcss -m -i ./styles/global.css -o app/styles/out.css",
    "build:remix": "remix build",
    "lint": "npm-run-all -p eslint stylelint prettier",
    "eslint": "eslint . --ext .ts,.tsx",
    "eslint:fix": "eslint --fix . --ext .ts,.tsx",
    "stylelint": "stylelint styles/*.css",
    "stylelint:fix": "stylelint --fix styles/*.css",
    "prettier": "prettier --write .",
    "postinstall": "remix setup node",
    "typecheck": "tsc --noEmit",
    "ncu": "ncu --reject react,react-dom,@types/react,@types/react-dom",
    "ncu:upgrade": "ncu -u --reject react,react-dom,@types/react,@types/react-dom",
    "commit": "cz"
  },
  "lint-staged": {
    "**/*.css": [
      "prettier --write",
      "stylelint --fix"
    ],
    "**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.ts?(x)": [
      "bash -c 'npm run typecheck'"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@balavishnuvj/remix-seo": "1.0.2",
    "@headlessui/react": "1.6.4",
    "@heroicons/react": "1.0.6",
    "@markdoc/markdoc": "0.1.2",
    "@radix-ui/react-collapsible": "0.1.6",
    "@radix-ui/react-context-menu": "0.1.6",
    "@radix-ui/react-dialog": "0.1.7",
    "@radix-ui/react-dropdown-menu": "0.1.6",
    "@radix-ui/react-icons": "1.1.1",
    "@radix-ui/react-navigation-menu": "0.1.2",
    "@radix-ui/react-scroll-area": "0.1.4",
    "@radix-ui/react-tabs": "0.1.5",
    "@radix-ui/react-visually-hidden": "0.1.4",
    "@reach/auto-id": "0.17.0",
    "@reach/dialog": "0.17.0",
    "@reach/skip-nav": "0.17.0",
    "@reach/tabs": "0.17.0",
    "@reach/visually-hidden": "0.17.0",
    "@reach/window-size": "0.17.0",
    "@remix-run/node": "1.5.1",
    "@remix-run/react": "1.5.1",
    "@remix-run/vercel": "1.5.1",
    "@sentry/browser": "7.1.1",
    "@sentry/node": "7.1.1",
    "@sentry/tracing": "7.1.1",
    "@splitbee/web": "0.3.0",
    "@tailwindcss/aspect-ratio": "0.4.0",
    "@tailwindcss/forms": "0.5.2",
    "@tailwindcss/line-clamp": "0.4.0",
    "@tailwindcss/typography": "0.5.2",
    "@tanem/react-nprogress": "5.0.1",
    "@urql/core": "2.5.0",
    "@vechaiui/core": "0.6.0",
    "@vechaiui/react": "0.2.2",
    "@vercel/node": "2.1.0",
    "axios": "0.27.2",
    "clsx": "1.1.1",
    "date-fns": "2.28.0",
    "dayjs": "1.11.3",
    "graphql": "16.5.0",
    "graphql-request": "4.3.0",
    "markdown-it": "13.0.1",
    "phosphor-react": "1.4.1",
    "posthog-js": "1.23.0",
    "posthog-node": "1.3.0",
    "prism-react-renderer": "1.3.3",
    "prismjs": "1.28.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-ga4": "1.4.1",
    "react-hook-form": "7.31.3",
    "react-icons": "4.4.0",
    "react-router-dom": "6.3.0",
    "remix": "1.5.1",
    "remix-utils": "3.3.0",
    "string-to-color": "2.2.2",
